<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_partner_gender_action" model="ir.actions.act_window">
        <field name="name">Contact Genders</field>
        <field name="res_model">res.partner.gender</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="res_partner_gender_tree_view" model="ir.ui.view">
        <field name="name">Contact gender tree</field>
        <field name="model">res.partner.gender</field>
        <field name="arch" type="xml">
            <tree string="Contact Genders" editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="res_partner_gender_form_view" model="ir.ui.view">
        <field name="name">Contact gender form</field>
        <field name="model">res.partner.gender</field>
        <field name="arch" type="xml">
            <form string="Contact Genders">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_partner_title_gender"
        action="res_partner_gender_action"
        name="Contact Genders" parent="contacts.res_partner_menu_config"
        sequence="4"/>

</odoo>
