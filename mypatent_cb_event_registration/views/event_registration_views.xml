<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_event_registration_form" model="ir.ui.view">
        <field name="name">event.registration.form.mypatent.event.registration</field>
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event.view_event_registration_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                <field name="firstname"/>
                <field name="lastname"/>
            </xpath>
            <xpath expr="//field[@name='mobile']" position="after">
                <field name="lang"/>
                <field name="country_id"/>
                <field name="city"/>
                <field name="street"/>
                <field name="zip"/>
                <field name="title_id" invisible="1"/>
                <field name="title"/>
                <field name="salutation_id" invisible="1"/>
                <field name="gender_id"/>
                <field name="company_name"/>
            </xpath>
            <xpath expr="//field[@name='date_closed']" position="before">
                <field name="voucher_code"/>
            </xpath>
        </field>
    </record>
</odoo>
